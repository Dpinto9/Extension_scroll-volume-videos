{
  "manifest_version": 3,
  "name": "Scroll Volume Control Enhanced",
  "version": "3.1",
  "description": "Control video volume with mouse wheel - YouTube, Twitch, Twitter/X & more",
  "permissions": [],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.twitch.tv/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitch.tv/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.reddit.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.vimeo.com/*",
        "*://*.dailymotion.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}