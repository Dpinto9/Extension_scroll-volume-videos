{
  "manifest_version": 1,
  "name": "Volta - Scroll Volume Controller",
  "version": "1.0.0",
  "description": "Control videos volumes with your mouse wheel - YouTube, Twitch & more.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.twitch.tv/*",
    "*://*.x.com/*",
    "*://*.twitter.com/*",
    "*://*.reddit.com/*",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.vimeo.com/*",
    "*://*.dailymotion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitch.tv/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.vimeo.com/*",
        "*://*.dailymotion.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [{
    "resources": ["*.js", "*.css"],
    "matches": ["<all_urls>"]
  }]
}